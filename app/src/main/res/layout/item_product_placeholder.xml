<!--                android:scaleX=".4"-->
<!--                android:scaleY=".4"-->
<!--                android:isIndicator="true"-->
<!--                android:theme="@style/MyRatingBar" />-->
        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>