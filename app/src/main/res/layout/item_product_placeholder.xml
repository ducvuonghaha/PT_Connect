<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundLighterBlack"
        android:orientation="vertical">

        <ImageView
            android:background="@color/background"
            android:id="@+id/imvImageNew"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <TextView
            android:background="@color/background"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/tvTitleNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="10sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView

                android:background="@color/background"
                android:text="1,400,000"
                android:id="@+id/tvPriceProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/background"
                android:textSize="12sp" />

            <TextView
                android:layout_alignParentEnd="true"
                android:background="@color/background"
                android:text="15000"
                android:id="@+id/tvRateProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/background"
                android:textSize="12sp" />

<!--            <androidx.appcompat.widget.AppCompatRatingBar-->
<!--                android:transformPivotY="2dp"-->
<!--                android:transformPivotX="80dp"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:id="@+id/ratingProductMall"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="2dp"-->
<!--                style="?android:attr/ratingBarStyleSmall"-->
<!--                android:numStars="5"-->
