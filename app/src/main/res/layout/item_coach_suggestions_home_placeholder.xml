<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorBackgroundLighterBlack"
    android:layout_width="wrap_content"
    android:layout_marginStart="20dp"
    android:gravity="center"
    android:layout_height="wrap_content">

    <ImageView
        android:background="@color/background"
        android:id="@+id/imvCoachesSuggestionHome"
        android:scaleType="centerCrop"
        android:layout_width="120dp"
        android:layout_height="140dp"/>

    <TextView
        android:background="@color/background"
        android:gravity="center"
        android:id="@+id/tvNameCoachesSuggestionHome"
        android:maxLines="2"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="5dp"
        android:textSize="11sp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <TextView

        android:background="@color/background"
        android:textColor="@color/colorWhite"
        android:layout_margin="4dp"
        android:gravity="center"
        android:id="@+id/tvSpecializedSuggest"
        android:layout_width="50dp"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginBottom="8dp"
        android:id="@+id/btnSendCoachesBySuggestionHome"
        android:layout_width="80dp"
        android:layout_height="17dp"
        android:layout_marginTop="10dp"
        android:background="@color/background"
        android:textSize="12sp"
        android:textStyle="bold" />


</LinearLayout>