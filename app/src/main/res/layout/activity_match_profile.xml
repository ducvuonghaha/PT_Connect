<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".screen.MatchProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackgroundLighterBlack"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tvTitleMatchProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="PT-Match"
                android:textColor="@color/colorWhite"
                android:textSize="22sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hồ sơ của bạn"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_marginStart="10dp"
                android:paddingBottom="20dp"
                android:background="@drawable/textlines"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vị trí"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView

                        android:id="@+id/tvPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hà Nội"
                        android:textColor="@color/colorDot"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>

                <Button
                    android:background="@drawable/button_login"
                    android:id="@+id/btnEditPlace"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Chỉnh sửa" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:paddingBottom="20dp"
                android:background="@drawable/textlines"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chuyên môn"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSpecialized"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GYM"
                        android:textColor="@color/colorDot"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>

                <Button
                    android:background="@drawable/button_login"
                    android:id="@+id/btnEditSpecialize"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Chỉnh sửa" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:paddingBottom="20dp"
                android:background="@drawable/textlines"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mục tiêu hình thể đầu tiên"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTarget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giảm mỡ"
                        android:textColor="@color/colorDot"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>

                <Button
                    android:background="@drawable/button_login"
                    android:id="@+id/btnEditTarget"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Chỉnh sửa" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:paddingBottom="20dp"
                android:background="@drawable/textlines"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tuổi"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Từ 21 dến 30 tuổi"
                        android:textColor="@color/colorDot"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>



                <Button
                    android:background="@drawable/button_login"
                    android:id="@+id/btnEditAge"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Chỉnh sửa" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:paddingBottom="20dp"
                android:background="@drawable/textlines"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giới tính"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nam "
                        android:textColor="@color/colorDot"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>



                <Button
                    android:background="@drawable/button_login"
                    android:id="@+id/btnEditSex"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Chỉnh sửa" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/btnMatch"
            android:text="MATCH"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:background="@drawable/button_dialog"
            android:textColor="@color/colorDot"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_margin="8dp"
            android:padding="8dp"
            android:id="@+id/rvCoachMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>